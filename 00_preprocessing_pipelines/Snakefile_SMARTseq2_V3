protocol= 'SMARTseqFINAL'

#Loading modules
#shell.executable("!/usr/bin/env bash")
shell.prefix("module unload gcc/latest; module load gcc/6.3.0; module load XZ/5.2.2; module load COREUTILS/8.21; module load CONDA/4.3.11_PYTHON3; module load java/latest; module load SAMTOOLS/1.9; module load BAMTOOLS/2.3.0 ; module load STAR/2.6.0c; module load R/3.5.0; module load hdf5/1.10.1; module load PIGZ/2.3.3; module load ZUMIS/29c776d; ")

#Samples
sample_files = listdir(fastq_path)
SAMPLES = list(set(i.split("_")[1] for i in sample_files))
#SPECIES = ["human", "mouse", "mixed"]


rule all:
    input:
        #expand('multigenome_SMARTseqFINAL_V3/{sample}_human/'+protocol+'.filtered.tagged.Aligned.out.bam',sample=SAMPLES),
        #expand('multigenome_SMARTseqFINAL_V3/{sample}_mouse/'+protocol+'.filtered.tagged.Aligned.out.bam',sample=SAMPLES),
        #expand('multigenome_SMARTseqFINAL_V3/{sample}_mixed/'+protocol+'.filtered.tagged.Aligned.out.bam',sample=SAMPLES)
        #expand('multigenome_SMARTseqFINAL_V3/{sample}_mixed/doublet_species/doublet_table.txt',sample=SAMPLES)
        "multigenome_SMARTseqFINAL_V3/"+protocol+".hsap.full.SCE.Robj",
        "multigenome_SMARTseqFINAL_V3/"+protocol+".mmus.full.SCE.Robj"

rule create_yaml:
    input:
         yaml = "pipeline_SMARTseq2.yaml"
    output:
        yamlOut_hsap="YAMLs/"+protocol+"_hsap_{sample}.yaml",
        yamlOut_mmus="YAMLs/"+protocol+"_mmus_{sample}.yaml",
        yamlOut_mixed="YAMLs/"+protocol+"_mixed_{sample}.yaml"
    run:
       #fname = input
        stream = open(input.yaml, 'r')
        data_hsap = yaml.load(stream)

        data_hsap['project'] = protocol
        data_hsap['sequence_files']['file1']['name'] = fastq_path+ 'SMARTseq_' + wildcards.sample +'_R1.fastq.gz'
        data_hsap['sequence_files']['file1']['base_definition'][0] = 'cDNA(1-76)'
        data_hsap['sequence_files']['file2']['name'] = fastq_path+ 'SMARTseq_' + wildcards.sample +'_R2.fastq.gz'
        data_hsap['sequence_files']['file2']['base_definition'][0] = 'cDNA(1-76)'
        data_hsap['sequence_files']['file3']['name'] = fastq_path+ 'SMARTseq_' + wildcards.sample +'_I1.fastq.gz'
        data_hsap['sequence_files']['file3']['base_definition'][0] = 'BC(1-8)'
        #data_hsap['sequence_files']['file3']['base_definition'][1] = 'UMI(1-8)'
        data_hsap['sequence_files']['file4']['name'] = fastq_path+ 'SMARTseq_' + wildcards.sample +'_I2.fastq.gz'
        data_hsap['sequence_files']['file4']['base_definition'][0] = 'BC(1-8)'
        data_hsap['num_threads'] = 8
        #data_hsap['mem_limit'] = 50
        data_hsap['make_stats'] = "yes"
        #data_hsap['which_Stage'] = 'Counting'
        #data_hsap['barcodes']['barcode_file'] = bc_list2
        data_hsap['barcodes']['barcode_num'] = 3000
        data_hsap['reference']['STAR_index'] = '/project/devel/alafzi/ref_genomes/human/STARgenome'
        data_hsap['reference']['GTF_file'] = '/project/devel/alafzi/ref_genomes/human/hsa_gencode.v28.annotation.gtf'
        data_hsap['reference']['additional_STAR_params'] = '--limitOutSJcollapsed 4000000 --limitSjdbInsertNsj 4000000'
        data_hsap['out_dir'] = "/project/devel/alafzi/SC_Protocols/Version3/multigenome_SMARTseqFINAL_V3/"+wildcards.sample+"_human"
        with open(output.yamlOut_hsap, 'w') as out_hsap:
            yaml.dump(data_hsap, out_hsap, default_flow_style=False)
        data_mmus = data_hsap
        data_mmus['reference']['STAR_index'] = '/project/devel/alafzi/ref_genomes/mouse/STARgenome'
        data_mmus['reference']['GTF_file'] = '/project/devel/alafzi/ref_genomes/mouse/mmu_gencode.vM17.primary_assembly.annotation.gtf'
        data_mmus['out_dir'] = "/project/devel/alafzi/SC_Protocols/Version3/multigenome_SMARTseqFINAL_V3/"+wildcards.sample+"_mouse"
        with open(output.yamlOut_mmus, 'w') as out_mmus:
            yaml.dump(data_mmus, out_mmus, default_flow_style=False)
        data_mixed = data_hsap
        data_mixed['reference']['STAR_index'] = '/project/devel/alafzi/ref_genomes/mixed/STARgenome'
        data_mixed['reference']['GTF_file'] = '/project/devel/alafzi/ref_genomes/mixed/hsap_mmus_can_combined_gtf.gtf'
        data_mixed['out_dir'] = "/project/devel/alafzi/SC_Protocols/Version3/multigenome_SMARTseqFINAL_V3/"+wildcards.sample+"_mixed"
        with open(output.yamlOut_mixed, 'w') as out_mixed:
            yaml.dump(data_mixed, out_mixed, default_flow_style=False)

rule fix_yaml:
    input: 
        yamlin_hsap="YAMLs/"+protocol+"_hsap_{sample}.yaml",
        yamlin_mmus="YAMLs/"+protocol+"_mmus_{sample}.yaml",
        yamlin_mixed="YAMLs/"+protocol+"_mixed_{sample}.yaml"
    output:
        yamlOutFix_hsap="YAMLs_fixed/"+protocol+"_hsap_{sample}_fixed.yaml",
        yamlOutFix_mmus="YAMLs_fixed/"+protocol+"_mmus_{sample}_fixed.yaml",
        yamlOutFix_mixed="YAMLs_fixed/"+protocol+"_mixed_{sample}_fixed.yaml"
    shell:
        """
       sed 's/make_stats: true/make_stats: yes/g' {input.yamlin_hsap} > {output.yamlOutFix_hsap}
       sed 's/make_stats: true/make_stats: yes/g' {input.yamlin_mmus} > {output.yamlOutFix_mmus}
       sed 's/make_stats: true/make_stats: yes/g' {input.yamlin_mixed} > {output.yamlOutFix_mixed}
       """
       

rule zUMI_run:
    input:
        yaml_hsap="YAMLs_fixed/"+protocol+"_hsap_{sample}_fixed.yaml",
        yaml_mmus="YAMLs_fixed/"+protocol + "_mmus_{sample}_fixed.yaml",
        yaml_mixed="YAMLs_fixed/"+protocol + "_mixed_{sample}_fixed.yaml"

    output:
        dir='multigenome_SMARTseqFINAL_V3/{sample}_human/'+protocol+'.filtered.tagged.Aligned.out.bam',
        dir2='multigenome_SMARTseqFINAL_V3/{sample}_mouse/'+protocol+'.filtered.tagged.Aligned.out.bam',
        dir3='multigenome_SMARTseqFINAL_V3/{sample}_mixed/'+protocol+'.filtered.tagged.Aligned.out.bam',
        
    shell:
        """
        cd multigenome_SMARTseqFINAL_V3/{wildcards.sample}_human
        bash {zUMI_path}/zUMIs-master.sh -y ../../{input.yaml_hsap}
        cd ../{wildcards.sample}_mouse
        bash {zUMI_path}/zUMIs-master.sh -y ../../{input.yaml_mmus}
        cd ../{wildcards.sample}_mixed
        bash {zUMI_path}/zUMIs-master.sh -y ../../{input.yaml_mixed}
        cd ../..
       """
rule Big_Bam_to_SAM:
    input: 
        'multigenome_SMARTseqFINAL_V3/{sample}_mixed/'+protocol+'.filtered.tagged.Aligned.out.bam'
    output: 
        'multigenome_SMARTseqFINAL_V3/{sample}_mixed/'+protocol+'.demuxready.sam'
    shell:
        """
        samtools view -h {input} > {output}
        """

# Here im getting the cell barcodes from readspercell.txt in zUMI_output/stats (It may be redundant I can combine it later)
rule cellBC_detected:
    input:
        reads_per_cell= 'multigenome_SMARTseqFINAL_V3/{sample}_mixed/zUMIs_output/'+protocol+'kept_barcodes.txt'
    output:
        'multigenome_SMARTseqFINAL_V3/{sample}_mixed/cell_barcodes.txt'
    shell:
        """
        sed '1d' {input.reads_per_cell} | cut -d ',' -f1 > {output}
        """
rule demux_cells:
    input:
        tagged_sam= 'multigenome_SMARTseqFINAL_V3/{sample}_mixed/'+protocol+'.demuxready.sam',
        detected_BC= 'multigenome_SMARTseqFINAL_V3/{sample}_mixed/cell_barcodes.txt'
    output:
        demux_dir= 'multigenome_SMARTseqFINAL_V3/{sample}_mixed/demuxed_cells_sam'
    shell:
         """
         mkdir {output.demux_dir}
         python SAM_cellBC_demultiplexing_V3_corrected.py {input.tagged_sam} {input.detected_BC} {protocol} {wildcards.sample} {output.demux_dir}
         """

rule doublet_species:
    input:
        demux_dir= 'multigenome_SMARTseqFINAL_V3/{sample}_mixed/demuxed_cells_sam'
    output:
        out1= 'multigenome_SMARTseqFINAL_V3/{sample}_mixed/doublet_species/doublet_table.txt',
        out2= 'multigenome_SMARTseqFINAL_V3/{sample}_mixed/doublet_species/doublet_table_reads.txt',
        out3= 'multigenome_SMARTseqFINAL_V3/{sample}_mixed/doublet_species/Only_human_cell_IDs.txt',
        out4= 'multigenome_SMARTseqFINAL_V3/{sample}_mixed/doublet_species/Only_mouse_cell_IDs.txt',
        out5= 'multigenome_SMARTseqFINAL_V3/{sample}_mixed/doublet_species/Only_dog_cell_IDs.txt',
        out6= 'multigenome_SMARTseqFINAL_V3/{sample}_mixed/doublet_species/Only_human_cell_IDs_BAMs.txt'

    shell:
        """
        python doublet_rate_V2.py {input.demux_dir} {output.out1} {output.out2} {output.out3} {output.out4} {output.out5} {output.out6}

        """
rule prepare_R_inputs:
    input:
        hsap_Exprs= expand('multigenome_SMARTseqFINAL_V3/{sample}_human/zUMIs_output/expression/'+protocol+'.dgecounts.rds',sample=SAMPLES),
        mmus_Exprs= expand('multigenome_SMARTseqFINAL_V3/{sample}_mouse/zUMIs_output/expression/'+protocol+'.dgecounts.rds',sample=SAMPLES),
        species_info= expand('multigenome_SMARTseqFINAL_V3/{sample}_mixed/doublet_species/doublet_table_reads.txt',sample=SAMPLES)
        #VCF_file= expand('multigenome_SMARTseqFINAL_V3/mpileup/{sample}.mpileup.full.vcf.gz',sample=SAMPLES)
    
    output:
        hsapExp_list="multigenome_SMARTseqFINAL_V3/"+protocol+'_Hsap_expression_list.txt',
        mmusExp_list="multigenome_SMARTseqFINAL_V3/"+protocol+'_Mmus_expression_list.txt',
        species_list="multigenome_SMARTseqFINAL_V3/"+protocol+'_Species_info_list.txt'
        #vcfs_list="multigenome_SMARTseqFINAL_V3/"+protocol+'_VCFs_list.txt'

    shell:
        """
        echo -e "{input.hsap_Exprs}" >> {output.hsapExp_list}
        echo -e "{input.mmus_Exprs}" >> {output.mmusExp_list}
        echo -e "{input.species_info}" >> {output.species_list}
        """

rule R_wrapper:
    input:
        hE_list="multigenome_SMARTseqFINAL_V3/"+protocol+'_Hsap_expression_list.txt',
        mE_list="multigenome_SMARTseqFINAL_V3/"+protocol+'_Mmus_expression_list.txt',
        spec_list="multigenome_SMARTseqFINAL_V3/"+protocol+'_Species_info_list.txt'
        #vcf_list="multigenome_SMARTseqFINAL_V3/"+protocol+'_VCFs_list.txt'
    output:
        hsap_Robj= "multigenome_SMARTseqFINAL_V3/"+protocol+".hsap.full.SCE.Robj",
        mmus_Robj= "multigenome_SMARTseqFINAL_V3/"+protocol+".mmus.full.SCE.Robj"
    shell:
        "Rscript wrapper_Robj_V4_SMARTseq2.R --hsapExp {input.hE_list} --mmusExp {input.mE_list} --species {input.spec_list} --output_SCEobj ./multigenome_SMARTseqFINAL_V3 --technology SMARTseqFINAL"
